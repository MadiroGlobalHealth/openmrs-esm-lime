{
  "name": "@madiro/esm-mental-health-app",
  "version": "1.0.0",
  "description": "Mental Health micro-frontend module for the OpenMRS SPA",
  "browser": "dist/openmrs-esm-mental-health-app.js",
  "main": "src/index.ts",
  "source": true,
  "license": "MPL-2.0",
  "homepage": "https://github.com/Madiro-org/openmrs-esm-lime#readme",
  "scripts": {
    "start": "openmrs develop",
    "serve": "webpack serve --mode=development",
    "debug": "npm run serve",
    "build": "webpack --mode production",
    "analyze": "webpack --mode=production --env.analyze=true",
    "lint": "eslint src --ext tsx",
    "test": "cross-env TZ=UTC jest --config jest.config.js --verbose false --passWithNoTests --color",
    "test-watch": "cross-env TZ=UTC jest --watch --config jest.config.js",
    "coverage": "yarn test --coverage",
    "typescript": "tsc",
    "extract-translations": "i18next 'src/**/*.component.tsx' 'src/**/*.extension.tsx' 'src/**/*modal.tsx' 'src/**/*.workspace.tsx' 'src/index.ts' --config ../../tools/i18next-parser.config.js"
  },
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "keywords": [
    "openmrs",
    "mental health"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Madiro-org/openmrs-esm-lime.git"
  },
  "bugs": {
    "url": "https://github.com/Madiro-org/openmrs-esm-lime/issues"
  },
  "dependencies": {
    "@carbon/react": "~1.37.0",
    "lodash-es": "^4.17.15",
    "yup": "^0.32.11"
  },
  "peerDependencies": {
    "@openmrs/esm-framework": "5.x",
    "@openmrs/esm-patient-common-lib": "7.x",
    "@openmrs/openmrs-form-engine-lib": "2.x",
    "dayjs": "1.x",
    "react": "18.x",
    "react-i18next": "11.x",
    "react-router-dom": "6.x",
    "swr": "2.x"
  },
  "devDependencies": {
    "webpack": "^5.74.0"
  }
}
